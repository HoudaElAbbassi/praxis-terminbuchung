generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// Benutzer-Modell (für Patienten und Admins)
model User {
  id            String    @id @default(cuid())
  email         String    @unique
  password      String
  role          UserRole  @default(PATIENT)

  // Patientendaten
  firstName     String
  lastName      String
  phone         String
  dateOfBirth   DateTime?
  address       String?

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relationen
  appointments  Appointment[]

  @@index([email])
}

enum UserRole {
  PATIENT
  ADMIN
}

// Terminarten-Modell
model AppointmentType {
  id            String    @id @default(cuid())
  name          String    @unique
  duration      Int       // Dauer in Minuten
  description   String?
  isActive      Boolean   @default(true)

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relationen
  appointments  Appointment[]

  @@index([name])
}

// Termin-Modell
model Appointment {
  id                String          @id @default(cuid())

  // Termin-Details
  date              DateTime?       // Optional: falls User nur Präferenzen angibt
  startTime         DateTime?       // Optional: falls User nur Präferenzen angibt
  endTime           DateTime?       // Optional: falls User nur Präferenzen angibt
  status            AppointmentStatus @default(PENDING)
  notes             String?

  // Erweiterte Felder
  insuranceType     InsuranceType?  // Versicherungsart
  isFirstVisit      Boolean?        // Ersttermin oder Folgetermin
  reasonForVisit    String?         // Grund des Besuchs

  // Verfügbarkeits-Präferenzen (wenn User keine feste Zeit wählt)
  preferredTimeSlots String?        // JSON Array: z.B. ["morning", "afternoon"]
  preferredDays      String?        // JSON Array: z.B. ["MONDAY", "WEDNESDAY"]

  // Neue Felder für Terminvorschlag-Workflow
  urgency           UrgencyLevel?   @default(NORMAL)
  specialRemarks    String?         // Freitext für besondere Wünsche/Einschränkungen

  // Relationen
  userId            String
  user              User            @relation(fields: [userId], references: [id], onDelete: Cascade)

  appointmentTypeId String
  appointmentType   AppointmentType @relation(fields: [appointmentTypeId], references: [id])

  proposals         AppointmentProposal[]

  // Timestamps
  createdAt         DateTime        @default(now())
  updatedAt         DateTime        @updatedAt

  @@index([userId])
  @@index([date])
  @@index([startTime])
}

enum AppointmentStatus {
  PENDING           // Initiale Wunsch-Einreichung
  PROPOSAL_SENT     // Admin hat Vorschlag gesendet, wartet auf Antwort
  CONFIRMED         // Patient hat Vorschlag angenommen
  CANCELLED
  COMPLETED
  NO_SHOW
}

enum InsuranceType {
  STATUTORY    // Gesetzlich versichert
  PRIVATE      // Privat versichert
  SELF_PAYER   // Selbstzahler
}

// Verfügbarkeit des Arztes
model Availability {
  id            String       @id @default(cuid())
  dayOfWeek     DayOfWeek
  startTime     String       // Format: "HH:MM"
  endTime       String       // Format: "HH:MM"
  isActive      Boolean      @default(true)

  // Timestamps
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  @@index([dayOfWeek])
}

enum DayOfWeek {
  MONDAY
  TUESDAY
  WEDNESDAY
  THURSDAY
  FRIDAY
  SATURDAY
  SUNDAY
}

// Praxis-Einstellungen
model Settings {
  id            String    @id @default(cuid())
  key           String    @unique
  value         String

  // Timestamps
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  @@index([key])
}

// Terminvorschlag-Modell
model AppointmentProposal {
  id                String              @id @default(cuid())
  appointmentId     String              @unique
  appointment       Appointment         @relation(fields: [appointmentId], references: [id], onDelete: Cascade)

  // Vorschlag-Details
  proposedDate      DateTime
  proposedStartTime DateTime
  proposedEndTime   DateTime
  status            ProposalStatus      @default(PENDING)

  // Token für Patienten-Antwort
  token             String              @unique @default(cuid())

  // Patienten-Antwort
  patientResponse   String?             // "ACCEPTED" oder "REJECTED"
  rejectionReason   String?             // Ablehnungsgrund des Patienten
  respondedAt       DateTime?

  // Admin-Erinnerungs-Tracking
  reminderSentAt    DateTime?
  reminderCount     Int                 @default(0)

  createdAt         DateTime            @default(now())
  updatedAt         DateTime            @updatedAt

  @@index([token])
  @@index([status])
  @@index([appointmentId])
}

enum ProposalStatus {
  PENDING           // Wartet auf Patienten-Antwort
  ACCEPTED          // Patient hat angenommen
  REJECTED          // Patient hat abgelehnt
  SUPERSEDED        // Wenn Admin neuen Vorschlag sendet
}

enum UrgencyLevel {
  URGENT
  NORMAL
  FLEXIBLE
}
